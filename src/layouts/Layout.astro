---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import '../styles/global.css';
import { Navbar } from '../components/Navbar.tsx';
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ConstructAid LLC - Concept to Completion. Modern construction project management for general contractors and construction professionals." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/constructaid-logo.png" />
    <link rel="apple-touch-icon" href="/constructaid-logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="h-full bg-background-light font-sans antialiased">
    <Navbar client:load />
    <slot />
  </body>
</html>