---
/**
 * Submittals Page - Product Submittal Log and Form
 */
import Layout from '../../../layouts/Layout.astro';
import ProjectModuleNav from '../../../components/ProjectModuleNav.tsx';
import ProjectHeader from '../../../components/ProjectHeader.tsx';

export const prerender = false;

const { id } = Astro.params;
---

<Layout title="Submittals - ConstructAid">
  <ProjectModuleNav projectId={id!} client:load />
  <ProjectHeader client:load projectId={id!} moduleName="Submittals" moduleIcon="ðŸ“¦" />

  <!-- Main Content Area with Left Margin for Sidebar -->
  <div class="min-h-screen bg-gray-50 ml-64">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <!-- Submittal Manager Container -->
      <div id="submittal-manager"></div>
    </div>
  </div>

  <script>
    import { render } from 'solid-js/web';
    import SubmittalManager from '../../../components/SubmittalManager';

    const container = document.getElementById('submittal-manager');
    if (container) {
      const pathParts = window.location.pathname.split('/');
      const projectId = parseInt(pathParts[2]);

      render(() => SubmittalManager({ projectId }), container);
    }
  </script>
</Layout>
