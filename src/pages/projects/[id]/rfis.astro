---
/**
 * RFI Page - Request for Information Log and Form
 */
import Layout from '../../../layouts/Layout.astro';
import { Navbar } from '../../../components/Navbar.tsx';
import ProjectModuleNav from '../../../components/ProjectModuleNav.tsx';

export const prerender = false;

const { id } = Astro.params;
---

<Layout title="RFIs - ConstructAid">
  <Navbar client:load />
  <ProjectModuleNav projectId={id!} client:load />

  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <!-- Back button -->
      <div class="mb-6">
        <a
          href={`/projects/${id}`}
          class="inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Project
        </a>
      </div>

      <!-- RFI Manager Container -->
      <div id="rfi-manager"></div>
    </div>
  </div>

  <script>
    import { render } from 'solid-js/web';
    import RFIManager from '../../../components/RFIManager';

    const container = document.getElementById('rfi-manager');
    if (container) {
      const pathParts = window.location.pathname.split('/');
      const projectId = parseInt(pathParts[2]);

      render(() => RFIManager({ projectId }), container);
    }
  </script>
</Layout>
