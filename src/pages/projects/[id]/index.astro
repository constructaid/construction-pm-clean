  async function saveProjectInfo() {
    if (!currentProjectData) return;

    // Get form values
    const updatedData = {
      name: (document.getElementById('edit-project-name') as HTMLInputElement)?.value,
      projectNumber: (document.getElementById('edit-project-number') as HTMLInputElement)?.value,
      description: (document.getElementById('edit-description') as HTMLTextAreaElement)?.value,
      status: (document.getElementById('edit-status') as HTMLSelectElement)?.value,
      totalBudget: parseFloat((document.getElementById('edit-budget') as HTMLInputElement)?.value) || 0,
      startDate: (document.getElementById('edit-start-date') as HTMLInputElement)?.value,
      estimatedCompletion: (document.getElementById('edit-completion-date') as HTMLInputElement)?.value,
      address: (document.getElementById('edit-address') as HTMLInputElement)?.value,
      city: (document.getElementById('edit-city') as HTMLInputElement)?.value,
      state: (document.getElementById('edit-state') as HTMLInputElement)?.value,
      zipCode: (document.getElementById('edit-zip') as HTMLInputElement)?.value,
    };

    // Validate required fields
    if (!updatedData.name || !updatedData.projectNumber) {
      alert('Project Name and Project Number are required.');
      return;
    }

    try {
      const response = await fetch(`/api/projects/${currentProjectData.id}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(updatedData),
      });

      const result = await response.json();

      if (result.success) {
        // Update the stored project data
        currentProjectData = { ...currentProjectData, ...updatedData };

        // Close modal
        closeModal('project-info-modal');

        // Reload the page to show updated data
        window.location.reload();
      } else {
        alert('Failed to save project information: ' + (result.error || 'Unknown error'));
      }
    } catch (error) {
      console.error('Error saving project:', error);
      alert('Failed to save project information. Please try again.');
    }
  }

