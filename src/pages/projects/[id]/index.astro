  <!-- Main Content Area with Left Margin for Sidebar -->
  <div class="min-h-screen bg-gray-900 ml-64">
    <!-- Top Bar with Project Selector -->
    <div class="bg-gray-800 border-b border-gray-700 shadow-sm sticky top-16 z-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
        <div class="flex items-center justify-between">
          <!-- Project Dropdown -->
          <div class="relative" id="project-selector-container">
            <button
              id="project-dropdown-button"
              class="inline-flex items-center gap-2 px-4 py-2 bg-gray-700 border-2 border-gray-600 rounded-lg hover:border-gray-500 transition-colors font-medium text-white"
            >
              <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <span id="current-project-name">Loading...</span>
              <svg class="w-4 h-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
