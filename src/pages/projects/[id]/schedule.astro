---
/**
 * Project Schedule Page - MS Project Style
 * Gantt chart and task management for project scheduling
 */
import Layout from '../../../layouts/Layout.astro';
import ProjectModuleNav from '../../../components/ProjectModuleNav.tsx';
import ProjectHeader from '../../../components/ProjectHeader.tsx';

export const prerender = false;

const { id } = Astro.params;
---

<Layout title="Project Schedule - ConstructAid">
  <!-- Left Sidebar Navigation -->
  <ProjectModuleNav client:load projectId={id!} />
  <ProjectHeader client:load projectId={id!} moduleName="Schedule" moduleIcon="ðŸ“…" />

  <!-- Main Content Area -->
  <div class="min-h-screen bg-gray-900 ml-64">
    <!-- Header -->
    <div class="bg-gray-800 border-b border-gray-700 shadow-sm">
      <div class="max-w-full mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-white">Project Schedule</h1>
            <p class="text-sm text-gray-400 mt-1">Gantt Chart & Task Timeline</p>
          </div>

          <div class="flex items-center gap-3">
            <!-- View Toggle -->
            <div class="flex bg-gray-700 rounded-lg p-1">
              <button id="view-gantt" class="px-4 py-2 rounded-md bg-gray-600 shadow-sm text-sm font-medium text-white transition-colors">
                Gantt Chart
              </button>
              <button id="view-list" class="px-4 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white transition-colors">
                Task List
              </button>
            </div>

            <!-- Add Task Button -->
            <button
              id="add-task-btn"
              class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Add Task
            </button>

            <!-- Export Button -->
            <button
              class="inline-flex items-center px-4 py-2 border border-gray-600 rounded-lg shadow-sm text-sm font-medium text-gray-300 bg-gray-700 hover:bg-gray-600 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Export
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Schedule Content -->
    <div class="p-6">
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-gray-800 rounded-lg shadow p-4 border-l-4 border-blue-500">
          <div class="text-sm text-gray-400">Total Tasks</div>
          <div class="text-2xl font-bold text-white mt-1" id="stat-total-tasks">0</div>
        </div>
        <div class="bg-gray-800 rounded-lg shadow p-4 border-l-4 border-green-500">
          <div class="text-sm text-gray-400">Completed</div>
          <div class="text-2xl font-bold text-white mt-1" id="stat-completed-tasks">0</div>
        </div>
        <div class="bg-gray-800 rounded-lg shadow p-4 border-l-4 border-orange-500">
          <div class="text-sm text-gray-400">In Progress</div>
          <div class="text-2xl font-bold text-white mt-1" id="stat-progress-tasks">0</div>
        </div>
        <div class="bg-gray-800 rounded-lg shadow p-4 border-l-4 border-red-500">
          <div class="text-sm text-gray-400">Critical Path</div>
          <div class="text-2xl font-bold text-white mt-1" id="stat-critical-tasks">0</div>
        </div>
      </div>

      <!-- Gantt Chart View -->
      <div id="gantt-view" class="bg-gray-800 rounded-lg shadow border border-gray-700">
        <!-- Timeline Header -->
        <div class="border-b border-gray-700">
          <div class="flex">
            <!-- Task List Column Header -->
            <div class="w-1/3 border-r border-gray-700 p-4 bg-gray-900">
              <div class="font-semibold text-white">Task Name</div>
            </div>
            <!-- Timeline Column Header -->
            <div class="flex-1 p-4 bg-gray-900 overflow-x-auto">
              <div id="timeline-header" class="flex text-xs text-gray-400">
                <!-- Timeline months will be generated here -->
              </div>
            </div>
          </div>
        </div>

        <!-- Task Rows -->
        <div id="task-rows" class="divide-y divide-gray-700">
          <!-- Task rows will be generated here -->
        </div>

        <!-- Loading State -->
        <div id="loading-schedule" class="p-12 text-center">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-orange-600"></div>
          <p class="mt-2 text-gray-400">Loading schedule...</p>
        </div>
      </div>

      <!-- List View (Hidden by default) -->
      <div id="list-view" class="hidden bg-gray-800 rounded-lg shadow overflow-hidden border border-gray-700">
        <table class="min-w-full divide-y divide-gray-700">
          <thead class="bg-gray-900">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">WBS</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Task Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Start Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">End Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Duration</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Progress</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody id="task-list-body" class="bg-gray-800 divide-y divide-gray-700">
            <!-- Task rows will be generated here -->
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Add/Edit Task Modal -->
  <div id="task-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border border-gray-700 w-11/12 max-w-2xl shadow-lg rounded-lg bg-gray-800">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-bold text-white" id="modal-title">Add New Task</h3>
        <button id="close-modal" class="text-gray-400 hover:text-white">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <form id="task-form" class="space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <div class="col-span-2">
            <label class="block text-sm font-medium text-gray-300 mb-1">Task Name *</label>
            <input
              type="text"
              id="task-name"
              required
              class="w-full px-3 py-2 bg-gray-700 border border-gray-600 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
          </div>

          <div class="col-span-2">
            <label class="block text-sm font-medium text-gray-300 mb-1">Description</label>
            <textarea
              id="task-description"
              rows="3"
              class="w-full px-3 py-2 bg-gray-700 border border-gray-600 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500"
            ></textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-1">Start Date *</label>
            <input
              type="date"
              id="task-start-date"
              required
              class="w-full px-3 py-2 bg-gray-700 border border-gray-600 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-1">End Date *</label>
            <input
              type="date"
              id="task-end-date"
              required
              class="w-full px-3 py-2 bg-gray-700 border border-gray-600 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-1">Duration (days)</label>
            <input
              type="number"
              id="task-duration"
              min="0"
              value="1"
              class="w-full px-3 py-2 bg-gray-700 border border-gray-600 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-1">% Complete</label>
            <input
              type="number"
              id="task-percent-complete"
              min="0"
              max="100"
              value="0"
              class="w-full px-3 py-2 bg-gray-700 border border-gray-600 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-1">Status</label>
            <select
              id="task-status"
              class="w-full px-3 py-2 bg-gray-700 border border-gray-600 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500"
            >
              <option value="not_started">Not Started</option>
              <option value="in_progress">In Progress</option>
              <option value="completed">Completed</option>
              <option value="on_hold">On Hold</option>
            </select>
          </div>

          <div class="flex items-center">
            <input
              type="checkbox"
              id="task-is-milestone"
              class="h-4 w-4 text-orange-600 focus:ring-orange-500 border-gray-600 rounded"
            />
            <label for="task-is-milestone" class="ml-2 block text-sm text-white">
              Milestone
            </label>
          </div>
        </div>

        <div class="flex justify-end gap-3 pt-4 border-t border-gray-700">
          <button
            type="button"
            id="cancel-task"
            class="px-4 py-2 border border-gray-600 rounded-md text-sm font-medium text-gray-300 hover:bg-gray-700 transition-colors"
          >
            Cancel
          </button>
          <button
            type="submit"
            class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 transition-colors"
          >
            Save Task
          </button>
        </div>
      </form>
    </div>
  </div>

  <script define:vars={{ projectId: id }}>
    let tasks = [];
    let currentView = 'gantt';

    // Fetch schedule tasks
    async function loadSchedule() {
      try {
        const response = await fetch(`/api/schedule/${projectId}`);
        const data = await response.json();

        if (data.success) {
          tasks = data.tasks;
          updateStats();
          renderGanttChart();
          renderListView();
        }
      } catch (error) {
        console.error('Error loading schedule:', error);
      } finally {
        document.getElementById('loading-schedule').style.display = 'none';
      }
    }

    // Update statistics
    function updateStats() {
      const totalTasks = tasks.length;
      const completedTasks = tasks.filter(t => t.status === 'completed').length;
      const inProgressTasks = tasks.filter(t => t.status === 'in_progress').length;
      const criticalTasks = tasks.filter(t => t.isCriticalPath).length;

      document.getElementById('stat-total-tasks').textContent = totalTasks;
      document.getElementById('stat-completed-tasks').textContent = completedTasks;
      document.getElementById('stat-progress-tasks').textContent = inProgressTasks;
      document.getElementById('stat-critical-tasks').textContent = criticalTasks;
    }

    // Render Gantt Chart
    function renderGanttChart() {
      const taskRows = document.getElementById('task-rows');
      taskRows.innerHTML = '';

      // Generate timeline header
      generateTimelineHeader();

      // Render each task
      tasks.forEach(task => {
        const row = createGanttTaskRow(task);
        taskRows.appendChild(row);
      });
    }

    // Generate timeline header (months)
    function generateTimelineHeader() {
      const header = document.getElementById('timeline-header');
      header.innerHTML = '';

      if (tasks.length === 0) return;

      // Find min and max dates
      const dates = tasks.flatMap(t => [new Date(t.startDate), new Date(t.endDate)]);
      const minDate = new Date(Math.min(...dates));
      const maxDate = new Date(Math.max(...dates));

      // Generate month columns
      const months = [];
      const currentDate = new Date(minDate.getFullYear(), minDate.getMonth(), 1);

      while (currentDate <= maxDate) {
        months.push({
          month: currentDate.getMonth(),
          year: currentDate.getFullYear(),
          label: currentDate.toLocaleDateString('en-US', { month: 'short', year: 'numeric' })
        });
        currentDate.setMonth(currentDate.getMonth() + 1);
      }

      months.forEach(m => {
        const monthCol = document.createElement('div');
        monthCol.className = 'flex-shrink-0 w-32 border-r border-gray-200 text-center font-medium';
        monthCol.textContent = m.label;
        header.appendChild(monthCol);
      });
    }

    // Create Gantt task row
    function createGanttTaskRow(task) {
      const row = document.createElement('div');
      row.className = 'flex hover:bg-gray-50 transition-colors';

      // Task name column
      const nameCol = document.createElement('div');
      nameCol.className = 'w-1/3 border-r border-gray-200 p-3';

      const indent = task.level > 1 ? `ml-${(task.level - 1) * 4}` : '';
      const icon = task.isMilestone ? 'â—†' : (task.level === 1 ? 'â–¼' : 'â€¢');
      const statusBadge = getStatusBadge(task.status);

      nameCol.innerHTML = `
        <div class="flex items-center gap-2">
          <span class="${indent}">${icon}</span>
          <div class="flex-1">
            <div class="font-medium text-gray-900 text-sm">${task.taskName}</div>
            <div class="text-xs text-gray-500 mt-0.5">
              ${task.wbsCode} â€¢ ${task.duration} days â€¢ ${task.percentComplete}%
              ${task.isCriticalPath ? '<span class="text-red-600 font-semibold ml-1">CRITICAL</span>' : ''}
            </div>
          </div>
          ${statusBadge}
        </div>
      `;

      // Timeline column
      const timelineCol = document.createElement('div');
      timelineCol.className = 'flex-1 p-3 overflow-x-auto relative';

      // Calculate bar position and width
      const bar = createGanttBar(task);
      timelineCol.appendChild(bar);

      row.appendChild(nameCol);
      row.appendChild(timelineCol);

      return row;
    }

    // Create Gantt bar
    function createGanttBar(task) {
      const bar = document.createElement('div');
      bar.className = 'h-6 rounded relative';
      bar.style.backgroundColor = task.color + '40'; // Add transparency
      bar.style.border = `2px solid ${task.color}`;

      // Calculate position based on dates (simplified)
      const width = task.duration * 12; // 12px per day
      bar.style.width = `${width}px`;

      // Progress indicator
      if (task.percentComplete > 0) {
        const progress = document.createElement('div');
        progress.className = 'h-full rounded-l';
        progress.style.backgroundColor = task.color;
        progress.style.width = `${task.percentComplete}%`;
        bar.appendChild(progress);
      }

      // Task label
      const label = document.createElement('span');
      label.className = 'absolute inset-0 flex items-center justify-center text-xs font-medium text-gray-900';
      label.textContent = `${task.percentComplete}%`;
      bar.appendChild(label);

      return bar;
    }

    // Get status badge
    function getStatusBadge(status) {
      const badges = {
        'completed': '<span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Completed</span>',
        'in_progress': '<span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">In Progress</span>',
        'not_started': '<span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Not Started</span>',
        'on_hold': '<span class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">On Hold</span>'
      };
      return badges[status] || '';
    }

    // Render List View
    function renderListView() {
      const tbody = document.getElementById('task-list-body');
      tbody.innerHTML = '';

      tasks.forEach(task => {
        const row = document.createElement('tr');
        row.className = 'hover:bg-gray-50';

        const indent = task.level > 1 ? '  '.repeat(task.level - 1) : '';

        row.innerHTML = `
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${task.wbsCode}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
            ${indent}${task.taskName}
            ${task.isMilestone ? '<span class="ml-2 text-blue-600">â—†</span>' : ''}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${task.startDate}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${task.endDate}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${task.duration}d</td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <div class="w-full bg-gray-200 rounded-full h-2 mr-2">
                <div class="bg-green-600 h-2 rounded-full" style="width: ${task.percentComplete}%"></div>
              </div>
              <span class="text-sm text-gray-600">${task.percentComplete}%</span>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">${getStatusBadge(task.status)}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <button class="text-blue-600 hover:text-blue-900 mr-3">Edit</button>
            <button class="text-red-600 hover:text-red-900">Delete</button>
          </td>
        `;

        tbody.appendChild(row);
      });
    }

    // View Toggle
    document.getElementById('view-gantt').addEventListener('click', () => {
      currentView = 'gantt';
      document.getElementById('gantt-view').classList.remove('hidden');
      document.getElementById('list-view').classList.add('hidden');
      document.getElementById('view-gantt').classList.add('bg-white', 'shadow-sm', 'text-gray-900');
      document.getElementById('view-gantt').classList.remove('text-gray-600');
      document.getElementById('view-list').classList.remove('bg-white', 'shadow-sm', 'text-gray-900');
      document.getElementById('view-list').classList.add('text-gray-600');
    });

    document.getElementById('view-list').addEventListener('click', () => {
      currentView = 'list';
      document.getElementById('gantt-view').classList.add('hidden');
      document.getElementById('list-view').classList.remove('hidden');
      document.getElementById('view-list').classList.add('bg-white', 'shadow-sm', 'text-gray-900');
      document.getElementById('view-list').classList.remove('text-gray-600');
      document.getElementById('view-gantt').classList.remove('bg-white', 'shadow-sm', 'text-gray-900');
      document.getElementById('view-gantt').classList.add('text-gray-600');
    });

    // Modal Controls
    document.getElementById('add-task-btn').addEventListener('click', () => {
      document.getElementById('task-modal').classList.remove('hidden');
    });

    document.getElementById('close-modal').addEventListener('click', () => {
      document.getElementById('task-modal').classList.add('hidden');
    });

    document.getElementById('cancel-task').addEventListener('click', () => {
      document.getElementById('task-modal').classList.add('hidden');
    });

    // Task Form Submit
    document.getElementById('task-form').addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = {
        taskName: document.getElementById('task-name').value,
        description: document.getElementById('task-description').value,
        startDate: document.getElementById('task-start-date').value,
        endDate: document.getElementById('task-end-date').value,
        duration: parseInt(document.getElementById('task-duration').value),
        percentComplete: parseInt(document.getElementById('task-percent-complete').value),
        status: document.getElementById('task-status').value,
        isMilestone: document.getElementById('task-is-milestone').checked
      };

      try {
        const response = await fetch(`/api/schedule/${projectId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });

        const result = await response.json();

        if (result.success) {
          document.getElementById('task-modal').classList.add('hidden');
          document.getElementById('task-form').reset();
          loadSchedule(); // Reload schedule
        } else {
          alert('Failed to create task: ' + result.message);
        }
      } catch (error) {
        console.error('Error creating task:', error);
        alert('Failed to create task');
      }
    });

    // Initialize
    loadSchedule();
  </script>
</Layout>
