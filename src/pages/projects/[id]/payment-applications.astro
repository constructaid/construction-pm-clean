---
import Layout from '../../../layouts/Layout.astro';
import ProjectModuleNav from '../../../components/ProjectModuleNav.tsx';
import ProjectHeader from '../../../components/ProjectHeader.tsx';

export const prerender = false;

const { id } = Astro.params;
---

<Layout title="Payment Applications - ConstructAid">
  <ProjectModuleNav projectId={id!} client:load />
  <ProjectHeader client:load projectId={id!} moduleName="Payment Applications" moduleIcon="ðŸ’°" />

  <!-- Main Content Area with Left Margin for Sidebar -->
  <div class="min-h-screen bg-gray-50 ml-64">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Payment Applications</h1>
        <p class="text-gray-600">Manage AIA G702/G703 payment applications for this project</p>
      </div>

      <div id="payment-app-container"></div>
    </div>
  </div>

  <script>
    import { render } from 'solid-js/web';
    import PaymentApplicationManager from '../../../components/PaymentApplicationManager';

    const container = document.getElementById('payment-app-container');
    if (container) {
      const pathParts = window.location.pathname.split('/');
      const projectId = parseInt(pathParts[2]);

      render(() => PaymentApplicationManager({ projectId }), container);
    }
  </script>
</Layout>
