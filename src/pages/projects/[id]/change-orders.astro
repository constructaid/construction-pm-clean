---
/**
 * Change Orders Page - Change Order Log and Form
 */
import Layout from '../../../layouts/Layout.astro';
import ProjectModuleNav from '../../../components/ProjectModuleNav.tsx';
import ProjectHeader from '../../../components/ProjectHeader.tsx';

export const prerender = false;

const { id } = Astro.params;
---

<Layout title="Change Orders - ConstructAid">
  <ProjectModuleNav projectId={id!} client:load />
  <ProjectHeader client:load projectId={id!} moduleName="Change Orders" moduleIcon="ðŸ“" />

  <!-- Main Content Area with Left Margin for Sidebar -->
  <div class="min-h-screen bg-gray-50 ml-64">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <!-- Change Order Manager Container -->
      <div id="change-order-manager"></div>
    </div>
  </div>

  <script>
    import { render } from 'solid-js/web';
    import ChangeOrderManager from '../../../components/ChangeOrderManager';

    const container = document.getElementById('change-order-manager');
    if (container) {
      const pathParts = window.location.pathname.split('/');
      const projectId = parseInt(pathParts[2]);

      render(() => ChangeOrderManager({ projectId }), container);
    }
  </script>
</Layout>
