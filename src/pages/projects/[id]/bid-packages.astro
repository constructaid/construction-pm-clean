---
/**
 * Bid Packages Page - Manage bid packages for a project
 */
import ProjectLayout from '../../../layouts/ProjectLayout.astro';
import { db } from '../../../lib/db';
import { projects, bidPackages } from '../../../lib/db/schema';
import { eq, desc } from 'drizzle-orm';

const { id } = Astro.params;
const projectId = parseInt(id!);

// Fetch project details
const [project] = await db.select().from(projects).where(eq(projects.id, projectId));

if (!project) {
  return Astro.redirect('/projects');
}

// Fetch bid packages
const packages = await db
  .select()
  .from(bidPackages)
  .where(eq(bidPackages.projectId, projectId))
  .orderBy(desc(bidPackages.createdAt));
---

<ProjectLayout title={`Bid Packages - ${project.name}`} projectId={projectId}>
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-heading font-light text-white mb-2">Bid Packages</h1>
        <p class="text-gray-400">Organize estimates and manage bidding opportunities</p>
      </div>
      <button
        onclick="createBidPackage()"
        class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium"
      >
        ➕ New Bid Package
      </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bg-gray-800 p-4 rounded-lg border border-gray-700">
        <div class="text-gray-400 text-sm mb-1">Total Packages</div>
        <div class="text-2xl font-bold text-white">{packages.length}</div>
      </div>
      <div class="bg-gray-800 p-4 rounded-lg border border-gray-700">
        <div class="text-gray-400 text-sm mb-1">In Preparation</div>
        <div class="text-2xl font-bold text-blue-400">
          {packages.filter(p => p.status === 'draft' || p.status === 'in_preparation').length}
        </div>
      </div>
      <div class="bg-gray-800 p-4 rounded-lg border border-gray-700">
        <div class="text-gray-400 text-sm mb-1">Submitted</div>
        <div class="text-2xl font-bold text-yellow-400">
          {packages.filter(p => p.status === 'submitted' || p.status === 'under_review').length}
        </div>
      </div>
      <div class="bg-gray-800 p-4 rounded-lg border border-gray-700">
        <div class="text-gray-400 text-sm mb-1">Awarded</div>
        <div class="text-2xl font-bold text-green-400">
          {packages.filter(p => p.status === 'awarded').length}
        </div>
      </div>
    </div>

    <!-- Bid Packages List -->
    {packages.length === 0 ? (
      <div class="bg-gray-800 rounded-lg border border-gray-700 p-12 text-center">
        <div class="text-gray-400 mb-4">
          <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-medium text-white mb-2">No Bid Packages Yet</h3>
        <p class="text-gray-400 mb-4">Create your first bid package to organize estimates and track bidding opportunities.</p>
        <button
          onclick="createBidPackage()"
          class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium"
        >
          ➕ Create First Bid Package
        </button>
      </div>
    ) : (
      <div class="space-y-4">
        {packages.map((pkg) => {
          const statusColors = {
            draft: 'bg-gray-700 text-gray-300',
            in_preparation: 'bg-blue-900 text-blue-300',
            submitted: 'bg-yellow-900 text-yellow-300',
            under_review: 'bg-purple-900 text-purple-300',
            awarded: 'bg-green-900 text-green-300',
            not_awarded: 'bg-red-900 text-red-300',
            withdrawn: 'bg-gray-700 text-gray-400',
            expired: 'bg-gray-700 text-gray-500',
          };

          const statusColor = statusColors[pkg.status] || 'bg-gray-700 text-gray-300';

          return (
            <div class="bg-gray-800 rounded-lg border border-gray-700 p-6 hover:border-green-600 transition-colors">
              <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="text-xl font-heading font-light text-white">{pkg.title}</h3>
                    <span class={`px-3 py-1 rounded-full text-xs font-medium ${statusColor}`}>
                      {pkg.status.replace('_', ' ').toUpperCase()}
                    </span>
                  </div>
                  <p class="text-sm text-gray-400 mb-1">Bid #: {pkg.bidNumber}</p>
                  {pkg.description && (
                    <p class="text-gray-300 mt-2">{pkg.description}</p>
                  )}
                </div>
                <a
                  href={`/projects/${projectId}/bid-packages/${pkg.id}`}
                  class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
                >
                  View Details →
                </a>
              </div>

              <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-4 border-t border-gray-700">
                <div>
                  <div class="text-xs text-gray-400 mb-1">Bid Type</div>
                  <div class="text-sm text-white font-medium">
                    {pkg.bidType.replace(/_/g, ' ').replace(/\b\w/g, (l: string) => l.toUpperCase())}
                  </div>
                </div>
                <div>
                  <div class="text-xs text-gray-400 mb-1">Owner</div>
                  <div class="text-sm text-white font-medium">{pkg.ownerName || 'N/A'}</div>
                </div>
                <div>
                  <div class="text-xs text-gray-400 mb-1">Bid Due Date</div>
                  <div class="text-sm text-white font-medium">
                    {new Date(pkg.bidDueDate).toLocaleDateString()}
                  </div>
                </div>
                <div>
                  <div class="text-xs text-gray-400 mb-1">Est. Contract Value</div>
                  <div class="text-sm text-white font-medium">
                    {pkg.estimatedContractValue
                      ? `$${(pkg.estimatedContractValue / 100).toLocaleString()}`
                      : 'N/A'}
                  </div>
                </div>
              </div>

              {pkg.requiresMWBE && (
                <div class="mt-4 p-3 bg-green-900/20 border border-green-800 rounded-lg">
                  <div class="flex items-center gap-2 text-green-400 text-sm">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>M/WBE Participation Required: {pkg.mwbeGoalPercentage}% goal</span>
                  </div>
                </div>
              )}
            </div>
          );
        })}
      </div>
    )}
  </div>
</ProjectLayout>

<script define:vars={{ projectId }}>
  async function createBidPackage() {
    const modal = document.createElement('div');
    modal.id = 'create-package-modal';
    modal.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4';
    modal.innerHTML = `
      <div class="bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="bg-gray-800 border-b border-gray-700 px-6 py-4 flex justify-between items-center sticky top-0">
          <h2 class="text-xl font-heading font-light text-white">Create New Bid Package</h2>
          <button onclick="closeCreateModal()" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <form id="create-package-form" class="p-6 space-y-4">
          <!-- Basic Information -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Bid Number *</label>
              <input
                type="text"
                id="bidNumber"
                required
                placeholder="e.g., BID-2025-001"
                class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-green-600"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Bid Type *</label>
              <select
                id="bidType"
                required
                class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-green-600"
              >
                <option value="public_competitive">Public Competitive</option>
                <option value="public_design_build">Public Design-Build</option>
                <option value="private_negotiated">Private Negotiated</option>
                <option value="private_competitive">Private Competitive</option>
                <option value="cm_at_risk">CM at Risk</option>
              </select>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Title *</label>
            <input
              type="text"
              id="title"
              required
              placeholder="e.g., Elementary School Renovation Project"
              class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-green-600"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Description</label>
            <textarea
              id="description"
              rows="3"
              placeholder="Brief description of the bid package..."
              class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-green-600"
            ></textarea>
          </div>

          <!-- Owner Information -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Owner Type</label>
              <select
                id="ownerType"
                class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-green-600"
              >
                <option value="">Select...</option>
                <option value="public">Public</option>
                <option value="private">Private</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Owner Name</label>
              <input
                type="text"
                id="ownerName"
                placeholder="e.g., Dallas ISD"
                class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-green-600"
              />
            </div>
          </div>

          <!-- Important Dates -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Bid Due Date *</label>
              <input
                type="date"
                id="bidDueDate"
                required
                class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-green-600"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Project Duration (days)</label>
              <input
                type="number"
                id="projectDuration"
                placeholder="e.g., 365"
                class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-green-600"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Estimated Contract Value</label>
            <input
              type="number"
              id="estimatedContractValue"
              placeholder="e.g., 5000000"
              step="1000"
              class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-green-600"
            />
            <p class="text-xs text-gray-500 mt-1">Enter amount in dollars</p>
          </div>

          <!-- Requirements -->
          <div class="space-y-3">
            <h3 class="text-lg font-medium text-white">Requirements</h3>

            <label class="flex items-center gap-3 cursor-pointer">
              <input type="checkbox" id="requiresBidBond" checked class="w-4 h-4 text-green-600 bg-gray-900 border-gray-700 rounded focus:ring-green-600 focus:ring-2" />
              <span class="text-gray-300">Requires Bid Bond</span>
            </label>

            <label class="flex items-center gap-3 cursor-pointer">
              <input type="checkbox" id="requiresPerformanceBond" checked class="w-4 h-4 text-green-600 bg-gray-900 border-gray-700 rounded focus:ring-green-600 focus:ring-2" />
              <span class="text-gray-300">Requires Performance Bond</span>
            </label>

            <label class="flex items-center gap-3 cursor-pointer">
              <input type="checkbox" id="requiresPaymentBond" checked class="w-4 h-4 text-green-600 bg-gray-900 border-gray-700 rounded focus:ring-green-600 focus:ring-2" />
              <span class="text-gray-300">Requires Payment Bond</span>
            </label>

            <label class="flex items-center gap-3 cursor-pointer">
              <input type="checkbox" id="requiresMWBE" class="w-4 h-4 text-green-600 bg-gray-900 border-gray-700 rounded focus:ring-green-600 focus:ring-2" onchange="toggleMWBEGoal()" />
              <span class="text-gray-300">Requires M/WBE Participation</span>
            </label>

            <div id="mwbeGoalContainer" class="hidden ml-7">
              <label class="block text-sm font-medium text-gray-300 mb-2">M/WBE Goal Percentage</label>
              <input
                type="number"
                id="mwbeGoalPercentage"
                placeholder="e.g., 20"
                min="0"
                max="100"
                class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-green-600"
              />
            </div>
          </div>

          <div class="flex justify-end gap-3 pt-4">
            <button
              type="button"
              onclick="closeCreateModal()"
              class="px-6 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium"
            >
              Create Bid Package
            </button>
          </div>
        </form>
      </div>
    `;

    document.body.appendChild(modal);

    const form = document.getElementById('create-package-form');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = {
        projectId,
        bidNumber: document.getElementById('bidNumber').value,
        title: document.getElementById('title').value,
        description: document.getElementById('description').value,
        bidType: document.getElementById('bidType').value,
        ownerType: document.getElementById('ownerType').value || null,
        ownerName: document.getElementById('ownerName').value || null,
        bidDueDate: document.getElementById('bidDueDate').value,
        projectDuration: parseInt(document.getElementById('projectDuration').value) || null,
        estimatedContractValue: document.getElementById('estimatedContractValue').value
          ? parseInt(document.getElementById('estimatedContractValue').value) * 100
          : null,
        requiresBidBond: document.getElementById('requiresBidBond').checked,
        requiresPerformanceBond: document.getElementById('requiresPerformanceBond').checked,
        requiresPaymentBond: document.getElementById('requiresPaymentBond').checked,
        requiresMWBE: document.getElementById('requiresMWBE').checked,
        mwbeGoalPercentage: document.getElementById('requiresMWBE').checked
          ? parseInt(document.getElementById('mwbeGoalPercentage').value) || null
          : null,
        status: 'draft',
        createdBy: null, // TODO: Get from session when auth is implemented
      };

      const response = await fetch('/api/bidding/packages', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData),
      });

      const result = await response.json();
      if (result.success) {
        window.location.reload();
      } else {
        alert('Error creating bid package: ' + result.error);
      }
    });
  }

  function toggleMWBEGoal() {
    const checkbox = document.getElementById('requiresMWBE');
    const container = document.getElementById('mwbeGoalContainer');
    if (checkbox.checked) {
      container.classList.remove('hidden');
    } else {
      container.classList.add('hidden');
    }
  }

  function closeCreateModal() {
    const modal = document.getElementById('create-package-modal');
    if (modal) {
      modal.remove();
    }
  }

  window.createBidPackage = createBidPackage;
  window.closeCreateModal = closeCreateModal;
</script>
