  <ChatWidget client:load />

  <div class="min-h-screen bg-gray-900">
    <!-- Project Header -->
    <ProjectHeader project={projectData} client:load />

    <!-- Module Navigation -->
    <ProjectModuleNav projectId={projectId} activeModule="closeout" client:load />

    <!-- Main Content -->
