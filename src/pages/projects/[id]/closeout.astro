---
import Layout from '../../../layouts/Layout.astro';
import { Navbar } from '../../../components/Navbar.tsx';
import ChatWidget from '../../../components/chatbot/ChatWidget.tsx';
import ProjectHeader from '../../../components/ProjectHeader.tsx';
import ProjectModuleNav from '../../../components/ProjectModuleNav.tsx';

const { id } = Astro.params;
const projectId = parseInt(id as string);

// Fetch project data
const baseUrl = Astro.url.origin;
const projectResponse = await fetch(`${baseUrl}/api/projects/${projectId}`);
const projectData = await projectResponse.json();
---

<Layout title={`Closeout - ${projectData.project?.name || 'Project'}`}>
