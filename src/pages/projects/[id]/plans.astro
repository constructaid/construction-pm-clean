---
/**
 * Plans & Specifications Page - Manage construction drawings and specifications
 */
import ProjectLayout from '../../../layouts/ProjectLayout.astro';
import { db } from '../../../lib/db';
import { projects, fileAttachments } from '../../../lib/db/schema';
import { eq, and, desc } from 'drizzle-orm';

const { id } = Astro.params;
const projectId = parseInt(id!);

// Fetch project details
const [project] = await db.select().from(projects).where(eq(projects.id, projectId));

if (!project) {
  return Astro.redirect('/projects');
}

// Fetch all plans and specifications
const plansAndSpecs = await db
  .select()
  .from(fileAttachments)
  .where(
    and(
      eq(fileAttachments.projectId, projectId),
      eq(fileAttachments.folderType, 'plans_specs')
    )
  )
  .orderBy(desc(fileAttachments.createdAt));

// Separate by type based on file extension and description
const drawings = plansAndSpecs.filter(file => {
  const ext = file.fileName.toLowerCase().split('.').pop();
  return ['pdf', 'dwg', 'dxf', 'rvt'].includes(ext || '') ||
         file.description?.toLowerCase().includes('drawing') ||
         file.description?.toLowerCase().includes('plan');
});

const specifications = plansAndSpecs.filter(file => {
  const ext = file.fileName.toLowerCase().split('.').pop();
  return ['pdf', 'doc', 'docx', 'txt'].includes(ext || '') &&
         (file.description?.toLowerCase().includes('spec') ||
          file.description?.toLowerCase().includes('specification') ||
          !drawings.includes(file));
});
---

<ProjectLayout title={`Plans & Specs - ${project.name}`} projectId={projectId}>
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-heading font-light text-white mb-2">Plans & Specifications</h1>
        <p class="text-gray-400">Construction drawings, specifications, and project documents</p>
      </div>
      <button
        onclick="uploadFile()"
        class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium"
      >
        üìÅ Upload File
      </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-gray-800 p-4 rounded-lg border border-gray-700">
        <div class="text-gray-400 text-sm mb-1">Total Files</div>
        <div class="text-2xl font-bold text-white">{plansAndSpecs.length}</div>
      </div>
      <div class="bg-gray-800 p-4 rounded-lg border border-gray-700">
        <div class="text-gray-400 text-sm mb-1">Drawings</div>
        <div class="text-2xl font-bold text-blue-400">{drawings.length}</div>
      </div>
      <div class="bg-gray-800 p-4 rounded-lg border border-gray-700">
        <div class="text-gray-400 text-sm mb-1">Specifications</div>
        <div class="text-2xl font-bold text-purple-400">{specifications.length}</div>
      </div>
    </div>

    <!-- Tab Navigation -->
    <div class="border-b border-gray-700">
      <nav class="flex space-x-4" aria-label="Tabs">
        <button
          onclick="switchTab('all')"
          id="tab-all"
          class="tab-button px-4 py-2 border-b-2 border-green-600 text-green-400 font-medium"
        >
          All Files ({plansAndSpecs.length})
        </button>
        <button
          onclick="switchTab('drawings')"
          id="tab-drawings"
          class="tab-button px-4 py-2 border-b-2 border-transparent text-gray-400 hover:text-white hover:border-gray-300 transition-colors"
        >
          Drawings ({drawings.length})
        </button>
        <button
          onclick="switchTab('specs')"
          id="tab-specs"
          class="tab-button px-4 py-2 border-b-2 border-transparent text-gray-400 hover:text-white hover:border-gray-300 transition-colors"
        >
          Specifications ({specifications.length})
        </button>
      </nav>
    </div>

    <!-- All Files Tab -->
    <div id="content-all" class="tab-content">
      {plansAndSpecs.length === 0 ? (
        <div class="bg-gray-800 rounded-lg border border-gray-700 p-12 text-center">
          <div class="text-gray-400 mb-4">
            <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-medium text-white mb-2">No Files Yet</h3>
          <p class="text-gray-400 mb-4">Upload construction drawings, specifications, and project documents.</p>
          <button
            onclick="uploadFile()"
            class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium"
          >
            üìÅ Upload First File
          </button>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {plansAndSpecs.map((file) => {
            const ext = file.fileName.toLowerCase().split('.').pop();
            let icon = 'üìÑ';
            let color = 'text-gray-400';

            if (['pdf'].includes(ext || '')) {
              icon = 'üìï';
              color = 'text-red-400';
            } else if (['dwg', 'dxf'].includes(ext || '')) {
              icon = 'üìê';
              color = 'text-blue-400';
            } else if (['rvt'].includes(ext || '')) {
              icon = 'üèóÔ∏è';
              color = 'text-purple-400';
            } else if (['doc', 'docx'].includes(ext || '')) {
              icon = 'üìù';
              color = 'text-blue-500';
            }

            return (
              <div class="bg-gray-800 rounded-lg border border-gray-700 p-4 hover:border-green-600 transition-colors">
                <div class="flex items-start justify-between mb-3">
                  <span class={`text-4xl ${color}`}>{icon}</span>
                  <button
                    onclick={`deleteFile(${file.id})`}
                    class="text-gray-400 hover:text-red-400 transition-colors"
                    title="Delete file"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
                <h3 class="text-white font-medium text-sm mb-2 truncate" title={file.originalName}>
                  {file.originalName}
                </h3>
                {file.description && (
                  <p class="text-gray-400 text-xs mb-3 line-clamp-2">{file.description}</p>
                )}
                <div class="flex items-center justify-between text-xs text-gray-500">
                  <span>{(file.fileSize / 1024).toFixed(0)} KB</span>
                  <span>{new Date(file.createdAt).toLocaleDateString()}</span>
                </div>
                <a
                  href={file.fileUrl}
                  target="_blank"
                  class="mt-3 block w-full text-center px-3 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors"
                >
                  View File
                </a>
              </div>
            );
          })}
        </div>
      )}
    </div>

    <!-- Drawings Tab -->
    <div id="content-drawings" class="tab-content hidden">
      {drawings.length === 0 ? (
        <div class="bg-gray-800 rounded-lg border border-gray-700 p-8 text-center">
          <p class="text-gray-400">No construction drawings uploaded yet.</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {drawings.map((file) => {
            const ext = file.fileName.toLowerCase().split('.').pop();
            let icon = 'üìê';
            let color = 'text-blue-400';

            if (ext === 'rvt') {
              icon = 'üèóÔ∏è';
              color = 'text-purple-400';
            }

            return (
              <div class="bg-gray-800 rounded-lg border border-gray-700 p-4 hover:border-blue-600 transition-colors">
                <div class="flex items-start justify-between mb-3">
                  <span class={`text-4xl ${color}`}>{icon}</span>
                  <button
                    onclick={`deleteFile(${file.id})`}
                    class="text-gray-400 hover:text-red-400 transition-colors"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
                <h3 class="text-white font-medium text-sm mb-2 truncate" title={file.originalName}>
                  {file.originalName}
                </h3>
                {file.description && (
                  <p class="text-gray-400 text-xs mb-3 line-clamp-2">{file.description}</p>
                )}
                <div class="flex items-center justify-between text-xs text-gray-500">
                  <span>{(file.fileSize / 1024).toFixed(0)} KB</span>
                  <span>{new Date(file.createdAt).toLocaleDateString()}</span>
                </div>
                <a
                  href={file.fileUrl}
                  target="_blank"
                  class="mt-3 block w-full text-center px-3 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors"
                >
                  View Drawing
                </a>
              </div>
            );
          })}
        </div>
      )}
    </div>

    <!-- Specifications Tab -->
    <div id="content-specs" class="tab-content hidden">
      {specifications.length === 0 ? (
        <div class="bg-gray-800 rounded-lg border border-gray-700 p-8 text-center">
          <p class="text-gray-400">No specifications uploaded yet.</p>
        </div>
      ) : (
        <div class="space-y-3">
          {specifications.map((file) => (
            <div class="bg-gray-800 rounded-lg border border-gray-700 p-4 hover:border-purple-600 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4 flex-1">
                  <span class="text-3xl text-purple-400">üìù</span>
                  <div class="flex-1 min-w-0">
                    <h3 class="text-white font-medium mb-1 truncate">{file.originalName}</h3>
                    {file.description && (
                      <p class="text-gray-400 text-sm">{file.description}</p>
                    )}
                    <div class="flex items-center gap-4 text-xs text-gray-500 mt-2">
                      <span>{(file.fileSize / 1024).toFixed(0)} KB</span>
                      <span>{new Date(file.createdAt).toLocaleDateString()}</span>
                    </div>
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <a
                    href={file.fileUrl}
                    target="_blank"
                    class="px-4 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors"
                  >
                    View
                  </a>
                  <button
                    onclick={`deleteFile(${file.id})`}
                    class="px-4 py-2 bg-red-600 text-white text-sm rounded-lg hover:bg-red-700 transition-colors"
                  >
                    Delete
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </div>
</ProjectLayout>

<script define:vars={{ projectId }}>
  function switchTab(tabName) {
    // Update tab buttons
    document.querySelectorAll('.tab-button').forEach(btn => {
      btn.classList.remove('border-green-600', 'text-green-400');
      btn.classList.add('border-transparent', 'text-gray-400');
    });

    const activeTab = document.getElementById(`tab-${tabName}`);
    if (activeTab) {
      activeTab.classList.remove('border-transparent', 'text-gray-400');
      activeTab.classList.add('border-green-600', 'text-green-400');
    }

    // Update content
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.add('hidden');
    });

    const activeContent = document.getElementById(`content-${tabName}`);
    if (activeContent) {
      activeContent.classList.remove('hidden');
    }
  }

  function uploadFile() {
    const modal = document.createElement('div');
    modal.id = 'upload-modal';
    modal.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4';
    modal.innerHTML = `
      <div class="bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full">
        <div class="bg-gray-800 border-b border-gray-700 px-6 py-4 flex justify-between items-center">
          <h2 class="text-xl font-heading font-light text-white">Upload Plan or Specification</h2>
          <button onclick="closeUploadModal()" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <form id="upload-form" class="p-6 space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">File *</label>
            <input
              type="file"
              id="file"
              required
              accept=".pdf,.dwg,.dxf,.rvt,.doc,.docx,.txt"
              class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-green-600 file:text-white hover:file:bg-green-700"
            />
            <p class="text-xs text-gray-500 mt-1">Accepted: PDF, DWG, DXF, RVT, DOC, DOCX, TXT</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Description</label>
            <input
              type="text"
              id="description"
              placeholder="e.g., Architectural Floor Plans - Rev A, or Division 03 Concrete Specifications"
              class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-green-600"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Tags (optional)</label>
            <input
              type="text"
              id="tags"
              placeholder="e.g., architectural, structural, revision-a"
              class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-green-600"
            />
            <p class="text-xs text-gray-500 mt-1">Comma-separated tags for easy searching</p>
          </div>

          <div class="flex justify-end gap-3 pt-4">
            <button
              type="button"
              onclick="closeUploadModal()"
              class="px-6 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium"
            >
              Upload
            </button>
          </div>
        </form>
      </div>
    `;

    document.body.appendChild(modal);

    const form = document.getElementById('upload-form');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const fileInput = document.getElementById('file');
      const descriptionInput = document.getElementById('description');
      const tagsInput = document.getElementById('tags');

      const file = fileInput.files[0];
      if (!file) return;

      const formData = new FormData();
      formData.append('file', file);
      formData.append('projectId', projectId.toString());
      formData.append('folderType', 'plans_specs');
      formData.append('description', descriptionInput.value);
      formData.append('uploadedBy', '1'); // TODO: Get from session

      if (tagsInput.value) {
        const tags = tagsInput.value.split(',').map(t => t.trim()).filter(t => t);
        formData.append('tags', JSON.stringify(tags));
      }

      try {
        const response = await fetch('/api/files/upload', {
          method: 'POST',
          body: formData,
        });

        const result = await response.json();
        if (result.success) {
          window.location.reload();
        } else {
          alert('Error uploading file: ' + result.error);
        }
      } catch (error) {
        alert('Error uploading file: ' + error.message);
      }
    });
  }

  async function deleteFile(fileId) {
    if (!confirm('Are you sure you want to delete this file?')) {
      return;
    }

    try {
      const response = await fetch(`/api/files/${fileId}`, {
        method: 'DELETE',
      });

      const result = await response.json();
      if (result.success) {
        window.location.reload();
      } else {
        alert('Error deleting file: ' + result.error);
      }
    } catch (error) {
      alert('Error deleting file: ' + error.message);
    }
  }

  function closeUploadModal() {
    const modal = document.getElementById('upload-modal');
    if (modal) modal.remove();
  }

  window.switchTab = switchTab;
  window.uploadFile = uploadFile;
  window.deleteFile = deleteFile;
  window.closeUploadModal = closeUploadModal;
</script>
