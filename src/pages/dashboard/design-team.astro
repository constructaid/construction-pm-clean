---
/**
 * Design Team Dashboard
 * Focus on RFIs, submittals, drawings, and specifications
 */
import Layout from '../../layouts/Layout.astro';

export const prerender = false;
---

<Layout title="Design Team Dashboard - ConstructAid">
  <div class="min-h-screen bg-background-light">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-6 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-heading font-light text-text-primary">Design Team Dashboard</h1>
            <p class="mt-1 text-sm text-text-secondary">Manage drawings, specifications, and RFIs</p>
          </div>
          <div class="flex items-center space-x-3">
            <button class="px-4 py-2 border border-gray-300 rounded text-sm font-medium hover:bg-gray-50 transition-all">
              Upload Drawings
            </button>
            <button class="px-4 py-2 bg-ca-orange text-white rounded text-sm font-medium hover:bg-ca-orange-dark transition-all">
              New Submittal
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-6 py-8">
      <!-- Key Metrics -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg p-6 border border-gray-200 shadow-ca-sm">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-text-secondary">Open RFIs</p>
              <p class="text-2xl font-heading font-light text-text-primary mt-1">24</p>
            </div>
            <div class="p-3 bg-status-warning/10 rounded-lg">
              <svg class="w-6 h-6 text-status-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="mt-4 flex items-center text-sm">
            <span class="text-red-600 font-medium">8</span>
            <span class="text-text-secondary ml-2">overdue</span>
          </div>
        </div>

        <div class="bg-white rounded-lg p-6 border border-gray-200 shadow-ca-sm">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-text-secondary">Pending Submittals</p>
              <p class="text-2xl font-heading font-light text-text-primary mt-1">18</p>
            </div>
            <div class="p-3 bg-status-info/10 rounded-lg">
              <svg class="w-6 h-6 text-status-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
          <div class="mt-4 flex items-center text-sm">
            <span class="text-green-600 font-medium">12</span>
            <span class="text-text-secondary ml-2">reviewed this week</span>
          </div>
        </div>

        <div class="bg-white rounded-lg p-6 border border-gray-200 shadow-ca-sm">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-text-secondary">Active Projects</p>
              <p class="text-2xl font-heading font-light text-text-primary mt-1">6</p>
            </div>
            <div class="p-3 bg-ca-teal/10 rounded-lg">
              <svg class="w-6 h-6 text-ca-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
              </svg>
            </div>
          </div>
          <div class="mt-4 flex items-center text-sm">
            <span class="text-green-600 font-medium">2</span>
            <span class="text-text-secondary ml-2">in design phase</span>
          </div>
        </div>

        <div class="bg-white rounded-lg p-6 border border-gray-200 shadow-ca-sm">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-text-secondary">Drawing Revisions</p>
              <p class="text-2xl font-heading font-light text-text-primary mt-1">31</p>
            </div>
            <div class="p-3 bg-ca-orange/10 rounded-lg">
              <svg class="w-6 h-6 text-ca-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
              </svg>
            </div>
          </div>
          <div class="mt-4 flex items-center text-sm">
            <span class="text-green-600 font-medium">15</span>
            <span class="text-text-secondary ml-2">completed this month</span>
          </div>
        </div>
      </div>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
        <!-- RFI Queue -->
        <div class="lg:col-span-2 bg-white rounded-lg border border-gray-200 shadow-ca-sm">
          <div class="p-6 border-b border-gray-200">
            <h2 class="text-lg font-heading font-light text-text-primary">RFI Queue</h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="border-l-4 border-red-500 bg-red-50 p-4 rounded-r-lg">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <p class="font-medium text-text-primary">RFI-045: Electrical Panel Location</p>
                    <p class="text-sm text-text-secondary mt-1">Downtown Office Complex</p>
                    <div class="flex items-center gap-4 mt-2">
                      <span class="text-xs text-red-600 font-medium">OVERDUE 3 days</span>
                      <span class="text-xs text-text-secondary">Priority: High</span>
                    </div>
                  </div>
                  <button class="px-3 py-1 bg-ca-orange text-white text-xs font-medium rounded hover:bg-ca-orange-dark">
                    Respond
                  </button>
                </div>
              </div>

              <div class="border-l-4 border-yellow-500 bg-yellow-50 p-4 rounded-r-lg">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <p class="font-medium text-text-primary">RFI-044: Foundation Detail Clarification</p>
                    <p class="text-sm text-text-secondary mt-1">Residential Tower</p>
                    <div class="flex items-center gap-4 mt-2">
                      <span class="text-xs text-yellow-600 font-medium">Due in 2 days</span>
                      <span class="text-xs text-text-secondary">Priority: Medium</span>
                    </div>
                  </div>
                  <button class="px-3 py-1 bg-ca-orange text-white text-xs font-medium rounded hover:bg-ca-orange-dark">
                    Respond
                  </button>
                </div>
              </div>

              <div class="border-l-4 border-blue-500 bg-blue-50 p-4 rounded-r-lg">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <p class="font-medium text-text-primary">RFI-043: HVAC System Specifications</p>
                    <p class="text-sm text-text-secondary mt-1">Shopping Center Renovation</p>
                    <div class="flex items-center gap-4 mt-2">
                      <span class="text-xs text-blue-600 font-medium">Due in 5 days</span>
                      <span class="text-xs text-text-secondary">Priority: Low</span>
                    </div>
                  </div>
                  <button class="px-3 py-1 bg-ca-orange text-white text-xs font-medium rounded hover:bg-ca-orange-dark">
                    Respond
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Submittals -->
        <div class="bg-white rounded-lg border border-gray-200 shadow-ca-sm">
          <div class="p-6 border-b border-gray-200">
            <h2 class="text-lg font-heading font-light text-text-primary">Recent Submittals</h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-sm font-medium text-text-primary">Curtain Wall System</p>
                <p class="text-xs text-text-secondary mt-1">Submitted 2h ago</p>
                <span class="inline-block mt-2 px-2 py-1 bg-yellow-100 text-yellow-800 text-xs rounded-full">Under Review</span>
              </div>
              <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-sm font-medium text-text-primary">Flooring Materials</p>
                <p class="text-xs text-text-secondary mt-1">Submitted 1d ago</p>
                <span class="inline-block mt-2 px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Approved</span>
              </div>
              <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-sm font-medium text-text-primary">Lighting Fixtures</p>
                <p class="text-xs text-text-secondary mt-1">Submitted 3d ago</p>
                <span class="inline-block mt-2 px-2 py-1 bg-red-100 text-red-800 text-xs rounded-full">Revise & Resubmit</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Drawing Sets -->
      <div class="bg-white rounded-lg border border-gray-200 shadow-ca-sm">
        <div class="p-6 border-b border-gray-200 flex items-center justify-between">
          <h2 class="text-lg font-heading font-light text-text-primary">Latest Drawing Sets</h2>
          <button class="text-sm text-ca-orange hover:text-ca-orange-dark font-medium">View All</button>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Sheet Number</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Title</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Revision</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-text-secondary uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-text-primary">A-101</td>
                <td class="px-6 py-4 text-sm text-text-primary">Ground Floor Plan</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">Rev 3</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">Oct 22, 2025</td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Approved</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                  <button class="text-ca-orange hover:text-ca-orange-dark font-medium">View</button>
                </td>
              </tr>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-text-primary">S-201</td>
                <td class="px-6 py-4 text-sm text-text-primary">Structural Details</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">Rev 2</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">Oct 20, 2025</td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">Under Review</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                  <button class="text-ca-orange hover:text-ca-orange-dark font-medium">View</button>
                </td>
              </tr>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-text-primary">E-301</td>
                <td class="px-6 py-4 text-sm text-text-primary">Electrical Riser Diagram</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">Rev 1</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">Oct 18, 2025</td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Approved</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                  <button class="text-ca-orange hover:text-ca-orange-dark font-medium">View</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</Layout>
