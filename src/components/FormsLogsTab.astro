---
/**
 * Forms & Logs Tab Component (Standalone)
 * For submitting daily logs, safety reports, and other forms
 * Includes CSI Division categorization support
 */
import CSIDropdown from './CSIDropdown.astro';

interface Props {
  projectId: string;
}

const { projectId } = Astro.props;
---

<div id="forms-logs-container" data-project-id={projectId}>
  <!-- This will be hydrated by the FormsLogsInteractive component -->
  <div class="animate-pulse">
    <div class="h-12 bg-gray-200 rounded w-full mb-4"></div>
    <div class="space-y-4">
      <div class="h-10 bg-gray-200 rounded"></div>
      <div class="h-24 bg-gray-200 rounded"></div>
      <div class="h-10 bg-gray-200 rounded"></div>
    </div>
  </div>
</div>

<script>
  // This component will be hydrated by SolidJS on client side
  import('./FormsLogsInteractive').then(({ default: FormsLogsInteractive }) => {
    // Component will auto-mount via client:load directive
  });
</script>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
