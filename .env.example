# ConstructAid Environment Variables
# Copy this file to .env and update with your actual values

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority

MONGODB_DB_NAME=constructaid

# Application Settings
NODE_ENV=development
PORT=4321

# JWT Secret (generate a random string for production)
JWT_SECRET=your-secret-key-here-change-in-production

# Development Mode - Authentication Bypass
# Set to true to skip login and automatically authenticate as a test GC user
# This allows feature development without authentication blocking progress
# SECURITY: Only works when NODE_ENV=development (ignored in production)
DEV_BYPASS_AUTH=false
PUBLIC_DEV_BYPASS_AUTH=false

# Email Configuration (optional, for email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS S3 (optional, for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# OpenAI API (optional, for AI chatbot)
OPENAI_API_KEY=

# Claude API (optional, alternative AI chatbot)
ANTHROPIC_API_KEY=

# Application URL (for production)
APP_URL=http://localhost:4321

# ========================================
# Database Backup System Configuration
# ========================================

# Database URL (PostgreSQL - REQUIRED for backups)
DATABASE_URL=postgresql://user:password@host:5432/database

# Backup Storage Directory (REQUIRED)
BACKUP_DIR=./backups

# Encryption Settings (HIGHLY RECOMMENDED for production)
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_ENCRYPTION_KEY=change-this-to-a-strong-32-character-key

# Cloud Storage (RECOMMENDED for off-site backups)
BACKUP_CLOUD_ENABLED=false
BACKUP_CLOUD_BUCKET=your-backup-bucket-name
BACKUP_CLOUD_REGION=us-east-1

# Retention Policy
BACKUP_RETENTION_DAYS=90    # Keep backups for 90 days
BACKUP_MAX_COUNT=30         # Keep maximum 30 backups

# Backup Schedule (Cron format)
BACKUP_SCHEDULE_ENABLED=true
BACKUP_SCHEDULE_CRON=0 2 * * *  # Daily at 2 AM

# Monitoring and Alerts
BACKUP_ALERT_EMAIL=admin@yourcompany.com
BACKUP_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Test Backup on Scheduler Start (optional)
BACKUP_TEST_ON_START=false
